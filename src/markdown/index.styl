.c-markdown
  display: block

  &.is-inline
    display: inline

    .c-markdown-content p
      display: inline

.c-markdown-content
  $contentOffset = .66em 0 $offsetSpace

  a
    text-decoration: underline

  input
    display: none

  h1
    font-size: 20px
    line-height: 32px

  > p
    margin: $contentOffset
    white-space: pre-line
    word-wrap: break-word

    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

  em
    font-style: italic

  strong
    font-weight: $fontWeightL

  img
    max-width: 100%
    margin: 1em 0

  > ul,
  > ol ul
    margin: $contentOffset
    padding-left: 2em
    list-style-type: disc

    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

  > ol ul
    list-style-type: circle

  ol
    margin: $contentOffset
    padding-left: 2em
    list-style-type: decimal

    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

  pre
    overflow-x: auto
    -webkit-overflow-scrolling: touch

  code
    padding: 0 $offsetSpace
    display: inline-block
    background: $colorDark20

  blockquote
    padding-left: 1.5em
    font-style: italic

  hr
    height: 1px
    background: $colorDark20
    border: none
