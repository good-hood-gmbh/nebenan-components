.c-side_scroller
  overflow: hidden
  position: relative

.c-side_scroller-container
  margin-bottom: -30px
  padding-bottom: -(@margin-bottom)
  box-sizing: content-box

  overflow-x: scroll
  overflow-y: hidden
  -webkit-overflow-scrolling: touch

  transform: translate3d(0, 0, 0)

.c-side_scroller-control
  width: 50px
  height: 100%

  display: flex
  align-items: center

  position: absolute
  top: 0
  left: 0

  // rgba(255, 255, 255, 0) is important to fade through white is Safari
  $gradientColors = $colorSnow 0, $colorSnow 20%, rgba(255, 255, 255, 0) 100%

  background: linear-gradient(90deg, $gradientColors)
  cursor: pointer

  animation: slideScrollerFadeIn 100ms

  i
    margin: 5px
    iconSize(16px)

  &.is-right
    right: 0
    left: auto
    background: linear-gradient(-90deg, $gradientColors)
    justify-content: flex-end

@keyframes slideScrollerFadeIn
  from
    opacity: 0

  to
    opacity: 1

.c-side_scroller-content
  cursorDraggable()
